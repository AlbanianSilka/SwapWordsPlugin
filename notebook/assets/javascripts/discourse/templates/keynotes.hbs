<h1>{{ i18n 'keynotes.title' }}</h1>

<form {{ action 'createKeynote' key on='submit' }}>
 <input type="text" id= key_area>
 <input type="text" id= link_area>

  <button type='submit' class='btn btn-primary'>
    {{ i18n 'submit_label' }}
  </button>
</form>


{{#if keynotes}}
<ul>
  {{#each keynotes as |keynote|}}
    <li>
      {{ keynote.key }} --> {{ keynote.link }}

       <button type="button" class="btn btn-danger" {{ action 'deleteKeynote' keynote }}>
           {{ "Delete keyword" }}
       </button>
    </li>
  {{/each}}
</ul>
{{/if}}

